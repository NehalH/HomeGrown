<!-- activity_my_product.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MyProductActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No products to show"
        android:visibility="gone" />


    <Button
        android:id="@+id/listProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List a product"
        android:visibility="gone" />

    <TextView
        android:id="@+id/emptyListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product List is Empty"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center"
        android:visibility="gone" />

    <Button
        android:id="@+id/addProductButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emptyListTextView"
        android:text="Add Product"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>
